{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/filme", "destination": "/public/filme.html" },
    { "source": "/serie", "destination": "/public/serie.html" },
    { "source": "/filme.html", "destination": "/public/filme.html" },
    { "source": "/serie.html", "destination": "/public/serie.html" },
    { "source": "/index.html", "destination": "/public/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    }
  ]
}
